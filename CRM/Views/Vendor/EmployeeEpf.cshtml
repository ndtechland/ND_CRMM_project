                                                        </td>
                                                        <td nowrap>
                                                            @item.CreatedDate?.ToString("dd/MM/yyyy")
                                                        </td>  
                                                        <td>
                                                            <div>
                                                                <a href="javascript:void(0);" onclick="confirmDelete('@Url.Action("DeleteEmpEPF", "Vendor", new { id = item.Id })')" class="fa fa-trash font-danger"></a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
