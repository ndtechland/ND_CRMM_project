<script type="text/javascript">
    $(document).ready(function () {        
         $('#empddl').change(function () {
        // $('#empddl').on('select2:change', function (e) {
            var employeeId = $(this).val();

            if (employeeId != "0") {
                $.ajax({
                    url: '@Url.Action("GetEmpEpfNumber", "Vendor")',
                    type: 'GET',
                    data: { employeeId: employeeId },
                    success: function (data) {
                        if (data) {
                            $('input[name="EPFNumber"]').val(data.epfNumber); 
                        } else {
                            $('input[name="EPFNumber"]').val(''); 
                        }
                    },
                    error: function () {
                        alert('Error retrieving EPF details');
                    }
                });
            } else {
                // Clear the fields if no EmployeeId is selected
                $('input[name="EPFNumber"]').val('');
                
            }
        });
    });
</script>
<script>
    $(document).ready(function () {
        
        $.ajax({
            url: '@Url.Action("GetVendorEfp")',   
            type: 'GET',
            success: function (data) {
                if (data && data.epfPercentage) {
                    
                    $('#epf').val(data.epfPercentage);
                }
            },
            error: function () {
                console.log('Error retrieving EPF data');
            }
        });
    });
</script>
<script>
    function confirmDelete(url) {
        var result = confirm("Are you sure you want to delete?");
        if (result) {
            window.location.href = url;
        }
    }
</script>
 

 

<script>
    $(document).ready(function () {
        // Check if the table has any rows
        var table = $('#datatable');
        var rowCount = table.find('tbody tr').length;

        if (rowCount > 0) {
            // Initialize DataTables if there are rows
            table.DataTable();
        } else {
            // Initialize DataTables without data
            table.DataTable({
                "language": {
                    "emptyTable": "No data available in table"
                }
            });
        }
    });
</script>


