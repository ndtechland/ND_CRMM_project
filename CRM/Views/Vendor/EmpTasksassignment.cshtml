<script>
    $(document).ready(function () {
        $('.taskstatus-dropdown').change(function () {
            // Get the selected option value
            var selectedText = $(this).find("option:selected").text();

            // Change the text color based on the selected option
            if (selectedText === "Pending") {
                $(this).css('color', 'orange');
            } else if (selectedText === "In Progress") {
                $(this).css('color', 'blue');
            } else if (selectedText === "Completed") {
                $(this).css('color', 'green');
            } else if (selectedText === "Reassigned") {
                $(this).css('color', 'purple');
            } else if (selectedText === "UnCompleted") {
                $(this).css('color', 'red');
            } else {
                $(this).css('color', 'black'); // default color
            }
        });

        // Trigger the change event on page load to set the initial color
        $('.taskstatus-dropdown').trigger('change');
    });
</script>



