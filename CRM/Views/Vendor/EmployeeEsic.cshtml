</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var message = "@TempData["Message"]";
        if (message == "ok" || message == "dltok" || message == "updok") {
            if (message) {
                let alertText;

                if (message == "dltok") {
                    alertText = "Deleted successfully.";
                } else if (message == "updok") {
                    alertText = "ESIC updated successfully.";
                } else {
                    alertText = "ESIC added successfully.";
                }
                Swal.fire({
                    title: 'Success',
                    text: alertText,
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        setTimeout(function () {
                            window.location.href = '@Url.Action("EmployeeEsic", "Vendor")';
                        }, 1000);
                    }
                });
            }
        } 
        else
        {
            if (message) {
                Swal.fire({
                    title: 'Failed',
                    text: message,
                    icon: 'error',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        setTimeout(function () {
                            window.location.href = '@Url.Action("EmployeeEsic", "Vendor")';
                        }, 1000);
                    }
                });
            }
        }
        
    });
</script>
<div class="page-wrapper">
    <div class="page-body-wrapper">
        <div class="page-sidebar">
        </div>

        <div class="page-body">

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <div class="page-header-left">
                                    <h4>@ViewBag.heading</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="/Home/Dashboard"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item">Employee </li>
                                <li class="breadcrumb-item active">Employee ESIC</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <form method="post" asp-controller="Vendor" asp-action="EmployeeEsic" autocomplete="off" onsubmit="return validateForm()">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row">
                                        <div class="form-group col-lg-4">
                                            <input type="hidden" name="Id" value="@ViewBag.id" />
                                            <label for="TxtEmployeeId">Employee Id</label>
                                            <select name="EmployeeId" id="empddl" class="form-control select2" required>
                                                <option value="0">-- Select Employee Id --</option>
                                                @foreach (var item in ViewBag.EmployeeItem)
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label class="control-label" for="epfnumberr">ESIC Number</label>
                                            <input type="text" name="ESICNumber" placeholder="Please Enter ESIC Number" value="@ViewBag.ESICNumber" class="form-control" required />
                                            <span name="EPFNumber" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-4">
                                            <label class="control-label" for="esic">ESIC %</label>
                                            <input type="text" id="esic" name="ESICPercentage" value="@ViewBag.ESICPercentage" class="form-control" required />
                                            <span name="EPFPercentage" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group" style="display:flex; justify-content:center;">
                                        <input type="submit" value="@ViewBag.btnText" class="btn btn-primary" />
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">

                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <div class=" table-responsive">
                                    <table id="datatable" class="table table-responsive">
                                        <thead>
                                            <tr style="background-color: #00baf2;">
                                                <th nowrap>Sl. No.</th>
                                                <th nowrap>
                                                    Employee Id
                                                </th>
                                                <th nowrap>
                                                    ESIC Number
                                                </th>
                                                <th nowrap>
                                                    ESIC
                                                </th>
                                                <th nowrap>
                                                    Created At
                                                </th>

                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var count = 0;
                                                    @foreach (var item in Model)
                                                {
                                                    count++;
                                                        <tr class="table-row">
                                                            <td class="EmpTaskId" hidden>@item.Id</td>
                                                            <td>@count</td>
                                                            <td nowrap>
                                                                @Html.DisplayFor(modelItem => item.EmployeeId)
                                                            </td>
                                                            <td nowrap>
                                                                @Html.DisplayFor(modelItem => item.Esicnumber)
                                                            </td>
                                                            <td nowrap>
                                                                @Html.DisplayFor(modelItem => item.Esicpercentage) %
                                                            </td>
                                                            <td nowrap>
                                                                @item.CreatedDate?.ToString("dd/MM/yyyy")
                                                            </td>
                                                            <td>
                                                                <div>
                                                                <a href="/Vendor/EmployeeEsic?Id=@item.Id" class="fa fa-edit m-2 font-success"></a>

                                                                    <a href="javascript:void(0);" onclick="confirmDelete('@Url.Action("DeleteEmpEsic", "Vendor", new { id = item.Id })')" class="fa fa-trash font-danger"></a>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="pagination-container">
                <ul id="pagination" class="pagination"></ul>
            </div>
        </div>


    </div>

</div>
 
