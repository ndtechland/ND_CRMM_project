@model CRM.Models.DTO.HrsignatureDto

@{
    ViewData["Title"] = "Hrsignature";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var message = "@TempData["msg"]";

        if (message == "ok" || message == "dltok" || message == "updok") {
            if (message) {
                let alertText;

                if (message == "dltok") {
                    alertText = "Deleted successfully.";
                } else if (message == "updok") {
                    alertText = "Updated successfully.";
                } else {
                    alertText = "Added successfully.";
                }

                Swal.fire({
                    title: 'Success',
                    text: alertText,
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        setTimeout(function () {
                            window.location.href = '@Url.Action("AddHRsignature", "Vendor")';
                        }, 1000);
                    }
                });
            }
        }
        else {
            if (message) {
                Swal.fire({
                    title: 'Failed',
                    text: message,
                    icon: 'error',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        setTimeout(function () {
                            window.location.href = '@Url.Action("AddHRsignature", "Vendor")';
                        }, 1000);
                    }
                });
            }
        }
    });
</script>

<script type="text/javascript">
    function DeletehrImageFile(FilePath, id) {
        var selectedValue = FilePath;
        if (confirm('Are you sure you want to delete this file?')) {
            $.get('/Vendor/DeletHrSignature', { FilePath: selectedValue, id: id }, function (data) {
                if (data == true) {
                    $("#ImageFile").removeAttr("disabled");
                    $("#ImageDetails").hide();
                    $("#filedelete").hide();
                    $("#hdnFilePath").val("");
                }
            });
        }
    }

    $(document).ready(function () {
        $("#filedelete").click(function () {
            $("#ImageDetails").hide();
            $("#filedelete").hide();
        });
    });
</script>
<div class="page-wrapper">
    <div class="page-body-wrapper">
        <div class="page-sidebar">
        </div>
        <div class="page-body">
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h2>
                                    @ViewBag.heading
                                </h2>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="/Home/Dashboard"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item">Settings</li>
                                <li class="breadcrumb-item">Leave & Hrms</li>
                                <li class="breadcrumb-item active">HR signature & sign</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <form asp-action="AddHRsignature" autocomplete="off" onsubmit="return validateForm()">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row gx-3 mb-3">
                                        <div class="row mb-3">
                                            <div class="col-lg-4 form-group">
                                                <input type="hidden" name="Id" value="@ViewBag.id" />
                                                <label for="HRName">HR Name</label>
                                                <input class="form-control" value='@ViewBag.HrName' placeholder="Enter HR Name" name="HrName" id="HrName" type="text">
                                            </div>
                                            <div class="col-lg-4 form-group">
                                                <label for="HrJobTitle">HR JobTitle</label>
                                                <input class="form-control" value='@ViewBag.HrJobTitle' placeholder="Enter HR JobTitle" name="HrJobTitle" id="HrJobTitle" type="text">
                                            </div>
                                            @if (ViewBag.HrSignature != "")
                                            {
                                                <div class="col-lg-4 form-group">
                                                    <label for="exampleInputFile">HR Signature</label>
                                                    <input type="hidden" value='@ViewBag.id' name="Id" />
                                                    <input type="file" accept=".png" id="ImageFile" name="ImageFile">
                                                    <br />
                                                    <br />
                                                    <img src='../CompanyImage/@ViewBag.HrSignature' id="ImageDetails" style="height:100px;width:100px" />
                                                    <i class="fas fa-trash-alt" id="filedelete" onclick="DeletehrImageFile('@Html.Raw(ViewBag.HrSignature)', @ViewBag.id)" style="color:red"></i>
                                                    <input type="hidden" value='@ViewBag.HrSignature' id="hdnFilePath" name="FilePath" />
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="row gx-3 mb-3">
                                                    <div class="col-lg-4 form-group">
                                                        <label for="exampleInputFile">HR Signature</label>
                                                        <input type="file" accept=" .png" id="ImageFile" name="ImageFile">
                                                        <input type="hidden" value='@ViewBag.HrSignature' name="FilePath" />
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <input type="submit" value="@ViewBag.btnText" class="btn btn-primary" />
                                        @if (ViewBag.id > 0)
                                        {
                                            <a href="/Vendor/AddHRsignature" class="btn btn-danger">Cancel</a>
                                        }

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <div class=" table-responsive">
                                    <table id="datatable" class="table table-hover">
                                        <thead>
                                            <tr style="background-color: #00baf2;">
                                                <th nowrap>Sl. No.</th>
                                                <th nowrap>
                                                    HR Name
                                                </th>
                                                <th nowrap>
                                                    HR JobTitle
                                                </th>
                                                <th nowrap>
                                                    HR Signature
                                                </th>
                                                <th>Edit</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var count = 0;
                                                foreach (var item in Model.Hrsignaturlist)
                                                {
                                                    count++;
                                                    <tr class="table-row">
                                                        <td>@count</td>
                                                        <td nowrap>
                                                            @Html.DisplayFor(modelItem => item.HrName)
                                                        </td>
                                                        <td nowrap>
                                                            @Html.DisplayFor(modelItem => item.HrJobTitle)
                                                        </td>
                                                        <td nowrap>
                                                            <img src='../CompanyImage/@item.HrSignature1' style="height:100px;width:100px" />
                                                        </td>
                                                        <td>
                                                            <div>
                                                                <a href="/Vendor/Aboutcompany?Id=@item.Id" class="fa fa-edit m-2 font-success"></a>

                                                            </div>
                                                        </td>
                                                        <td>
                                                            <a href="javascript:void(0);" onclick="confirmDelete('@Url.Action("DeleteAboutcompany", "Vendor", new { id = item.Id })')" class="fa fa-trash font-danger"></a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>
<script>
    function confirmDelete(url) {
        var result = confirm("Are you sure you want to delete?");
        if (result) {
            window.location.href = url;
        }
    }
</script>
