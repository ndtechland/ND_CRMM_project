@model List<CRM.Models.DTO.EmployeeOvertimeDto>

@{
    ViewData["Title"] = "EmployeeOvertime";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<style>
    .dataTables_wrapper table.dataTable th {
        background-color: #00baf2 !important;
        padding: 24px 0.75rem !important;
    }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var message = "@TempData["msg"]";

        if (message) {
            Swal.fire({
                title: 'Success',
                text: message,
                icon: 'info',
                confirmButtonText: 'OK'
            }).then((result) => {
                if (result.isConfirmed) {
                    setTimeout(function () {
                        window.location.href = '@Url.Action("EmployeeApplyOvertimeList", "Vendor")';
                    }, 1000);
                }
            });
        }
    });
</script>
<div class="page-wrapper">
    <div class="page-body-wrapper">
        <div class="page-sidebar">
        </div>
        <div class="page-body">
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h2>
                                    @ViewBag.heading
                                </h2>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="/Home/Dashboard"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item">Report</li>
                                <li class="breadcrumb-item active">Overtime Applied List</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <div class=" table-responsive">
                                    <table id="datatable" class="table table-hover">
                                        <thead>
                                            <tr style="background-color: #00baf2;">
                                                <th nowrap>Sl. No.</th>
                                                <th nowrap>
                                                    Employee Id
                                                </th>
                                                <th nowrap>
                                                    Employee Name
                                                </th>
                                                <th nowrap>
                                                    Start Time
                                                </th>
                                                <th nowrap>
                                                    End Time
                                                </th>
                                                <th nowrap>TotalOvertime Hours</th>
                                                <th nowrap>Status</th>
                                                <th nowrap>Approved Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var count = 0;
                                                foreach (var item in Model)
                                                {
                                                    count++;
                                                    <tr class="table-row">
                                                        <td>@count</td>
                                                        <td nowrap>
                                                            @Html.DisplayFor(modelItem => item.EmployeeId)
                                                        </td>
                                                        <td nowrap>
                                                            @Html.DisplayFor(modelItem => item.EmployeeName)
                                                        </td>
                                                        <td nowrap>
                                                            @item.StartTime
                                                        </td>
                                                        <td nowrap>
                                                            @item.EndTime
                                                        </td>
                                                        <td>
                                                            @item.TotalOvertimeHours
                                                        </td>
                                                        <td>
                                                            @if (item.Approved == true)
                                                            {
                                                                <a href="@Url.Action("UpdateApplyOvertimeStatus", "Vendor", new { Id = item.Id })" class="btn btn-success"
                                                                   onclick="return confirm('Are you sure you want to disapproved Overtime?');">
                                                                    Approved
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a href="@Url.Action("UpdateApplyOvertimeStatus", "Vendor", new { Id = item.Id })" class="btn btn-danger"
                                                                   onclick="return confirm('Are you sure you want to approved Overtime?');">
                                                                    Disapproved
                                                                </a>
                                                            }
                                                        </td>
                                                        <td nowrap>
                                                            @item.ApprovalDate
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#datatable').DataTable();
    });
</script>