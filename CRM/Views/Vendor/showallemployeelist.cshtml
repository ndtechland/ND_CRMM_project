@model CRM.Models.DTO.showallemployeelisteDto

@{
    ViewData["Title"] = "Employeelist";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<style>
    .dataTables_wrapper table.dataTable th {
        background-color: #00baf2 !important;
        padding: 24px 0.75rem !important;
    }
</style>
 
<div class="page-wrapper">
    <div class="page-body-wrapper">
        <div class="page-sidebar">
        </div>
        <div class="page-body">
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h2>
                                    @ViewBag.heading
                                </h2>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="/Home/Dashboard"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item">Report</li>
                                <li class="breadcrumb-item active">Employee List</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <div class=" table-responsive">
                                    <table id="datatable" class="table table-hover">
                                        <thead>
                                            <tr style="background-color: #00baf2;">
                                                <th nowrap>Sl. No.</th>
                                                <th nowrap>
                                                    Employee Id
                                                </th>
                                                <th nowrap>
                                                    Employee Name
                                                </th>
                                                <th nowrap>
                                                    Mobile Number
                                                </th>
                                                <th nowrap>
                                                    Email Id
                                                </th>
                                                <th nowrap>Joining Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                var count = 0;
                                                foreach (var item in Model.emplist)
                                                {
                                                    count++;
                                                    <tr class="table-row">
                                                        <td>@count</td>
                                                        <td nowrap>
                                                            <a class="Attendancelist" href="@Url.Action("EmployeeAttendanceList", "Vendor",new {EmpId = @item.EmpId})">@item.EmpId</a>
                                                            <a class="Breaklist" href="@Url.Action("EmployeeBreakList", "Vendor",new {EmpId = @item.EmpId})">@item.EmpId</a>
                                                        </td>
                                                        <td nowrap>
                                                            @Html.DisplayFor(modelItem => item.EmployeeName)
                                                        </td>
                                                        <td nowrap>
                                                            @item.MobileNumber
                                                        </td>
                                                        <td nowrap>
                                                            @item.EmailId
                                                        </td>
                                                        <td nowrap>
                                                            @item.JoiningDate
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#datatable').DataTable();
    });
</script>
<script>
    $(document).ready(function () {
        $(".Attendancelist").hide();
        $(".Breaklist").hide();
        var currentUrl = window.location.href;

        if (currentUrl.indexOf("showallemployeeAttendancelist") !== -1) {
            $(".Attendancelist").show();
        }
        else {
            $(".Breaklist").show();
        }
    });
</script>
