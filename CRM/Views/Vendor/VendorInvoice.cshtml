@model CRM.Models.DTO.Invoice
@{
    DateTime date = DateTime.Now;
    string fordate = date.ToString("dd-MM-yyyy");
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .invoice-container {
            width: 80%;
            margin: auto;
            padding: 20px;
            border: 1px solid #ccc;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid black;
            padding-bottom: 10px;
        }

            .header img {
                max-height: 60px;
            }

            .header div {
                text-align: right;
            }

        h1 {
            text-align: center;
            margin: 20px 0;
            font-size: 24px;
            text-transform: uppercase;
        }

        .invoice-details, .billing-details {
            margin-bottom: 20px;
            width: 100%;
        }

            .invoice-details table, .billing-details table {
                width: 100%;
                border-collapse: collapse;
            }

            .invoice-details td, .billing-details td {
                padding: 8px;
                border: 1px solid #ccc;
            }

        .invoice-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .invoice-table th, .invoice-table td {
                border: 1px solid #000;
                padding: 8px;
                text-align: center;
            }

            .invoice-table th {
                background-color: #f2f2f2;
            }

        .totals {
            float: right;
            margin-top: 20px;
        }

            .totals table {
                width: 300px;
                border-collapse: collapse;
                margin-top: 10px;
            }

            .totals td {
                padding: 5px;
                border: 1px solid #ccc;
            }

        .bank-details {
            margin-top: 20px;
            border-top: 2px solid black;
            padding-top: 10px;
        }

        .footer {
            clear: both;
            margin-top: 30px;
            text-align: right;
        }

            .footer p {
                margin: 0;
            }

        .signature {
            margin-top: 50px;
        }
    </style>
</head>
<body>

    <div class="invoice-container">
        <div class="header">
            <img src="~/assets/images/layout-2/logo/logo.png" alt="Company Logo">
            <div>
                <h3>N D Techland Private Limited</h3>
                <p>
                    C 53, 1st Floor, Sector 2<br>
                    Noida Uttar Pradesh 201301<br>
                    GSTIN 09AAHCN4627Q1ZQ
                </p>
            </div>
        </div>

        <h1>Tax Invoice</h1>

        <div class="invoice-details">
            <table>
                <tr>
                    <td>Invoice #: ND-2024/25-1014</td>
                    <td>Place of Supply: Uttar Pradesh (09)</td>
                </tr>
                <tr>
                    <td>Invoice Date: @fordate</td>
                    <td>Due Date: @fordate</td>
                </tr>
                <tr>
                    <td>Terms: Due on Receipt</td>
                </tr>
            </table>
        </div>

        <div class="billing-details">
            <table>
                <tr>
                    <td>
                        <strong>Bill To:</strong><br>
                        @Model.CompanyName<br>
                        @Model.BillingAddress,<br>
                        @Model.CityName,@Model.StateName<br>
                        GSTIN: @Model.GstNumber
                    </td>
                    <td>
                        <strong>Ship To:</strong><br>
                        @Model.CompanyName<br>
                        @Model.BillingAddress,<br>
                        @Model.CityName,@Model.StateName<br>
                        GSTIN: @Model.GstNumber
                    </td>
                </tr>
            </table>
        </div>

        <table class="invoice-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Item & Description</th>
                    <th>HSN/SAC</th>
                    <th>Qty</th>
                    <th>Rate</th>
                    <th>CGST</th>
                    <th>SGST</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Domain rapic.co.in</td>
                    <td>998314</td>
                    <td>1</td>
                    <td>649.00</td>
                    <td>9% (58.41)</td>
                    <td>9% (58.41)</td>
                    <td>649.00</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Hosting Rapic.co.in</td>
                    <td>998315</td>
                    <td>1</td>
                    <td>2,000.00</td>
                    <td>9% (180.00)</td>
                    <td>9% (180.00)</td>
                    <td>2,000.00</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Domain scyara.in</td>
                    <td>998315</td>
                    <td>1</td>
                    <td>699.00</td>
                    <td>9% (62.91)</td>
                    <td>9% (62.91)</td>
                    <td>699.00</td>
                </tr>
            </tbody>
        </table>

        <div class="totals">
            <table>
                <tr>
                    <td>Sub Total</td>
                    <td>3,348.00</td>
                </tr>
                <tr>
                    <td>CGST (9%)</td>
                    <td>301.32</td>
                </tr>
                <tr>
                    <td>SGST (9%)</td>
                    <td>301.32</td>
                </tr>
                <tr>
                    <td>Rounding</td>
                    <td>0.36</td>
                </tr>
                <tr>
                    <td><strong>Total</strong></td>
                    <td><strong>₹ 3,951.00</strong></td>
                </tr>
                <tr>
                    <td>Payment Made</td>
                    <td>₹ 3,951.00</td>
                </tr>
                <tr>
                    <td><strong>Balance Due</strong></td>
                    <td><strong>₹ 0.00</strong></td>
                </tr>
            </table>
        </div>

        <div class="bank-details">
            <h3>Bank Details</h3>
            <p>
                Name: N D Techland Private Limited<br>
                A/C No: 7124200110005060<br>
                IFSC: BKID0007124<br>
                Bank: Bank of India<br>
                Branch: Sector - 22
            </p>
        </div>

        <div class="footer">
            <p><strong>For N D Techland Pvt. Ltd.</strong></p>
            <div class="signature">
                <p>Director</p>
                <p>Authorized Signature</p>
            </div>
        </div>
    </div>

</body>
</html>




  



