        });
    </script>
}
else
{
    <div class="page-wrapper">
        <div class="page-body-wrapper">
            <div class="page-sidebar">
            </div>
            <!-- Page Sidebar Ends-->
            <!-- Right sidebar Start-->
            <!-- Right sidebar Ends-->

            <div class="page-body">

                <!-- Container-fluid starts-->
                <div class="container-fluid">
                    <div class="page-header">
