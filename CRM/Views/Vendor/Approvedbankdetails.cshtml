    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            var selectedStatus = '@ViewBag.AccountTypeID';
            if (selectedStatus !== "") {
                $("input[name='AccountTypeId'][value='" + selectedStatus + "']").prop('checked', true);
