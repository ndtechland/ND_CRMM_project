                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="pagination-container">
                <ul id="pagination" class="pagination"></ul>
            </div>
        </div>


    </div>

</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    var currentPage = 1;
    var rowsPerPage = 5;
    $(document).ready(function () {
        function paginateTable() {
            var table = $('#datatable');
            var rows = table.find('tbody tr');


            var totalPages = Math.ceil(rows.length / rowsPerPage);


            var pagination = $('#pagination');
            pagination.empty();

            for (var i = 1; i <= totalPages; i++) {
                var link = $('<li class="page-item"><a class="page-link" href="#">' + i + '</a></li>');


                if (i === currentPage) {
                    link.addClass('active');
                }

                pagination.append(link);
            }


            var startIndex = (currentPage - 1) * rowsPerPage;
            var endIndex = startIndex + rowsPerPage;

            rows.hide().slice(startIndex, endIndex).show();
        }


        paginateTable();

        $(document).on('click', '#pagination li a', function (event) {
            event.preventDefault();

            var clickedPage = parseInt($(this).text());


            currentPage = clickedPage;
            paginateTable();


            $('html, body').animate({ scrollTop: $('#table-container').offset().top }, 'slow');
        });
    });

</script>
<script>
    function confirmDelete(url) {
        var result = confirm("Are you sure you want to delete?");
        if (result) {
            window.location.href = url;
        }
    }
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.active-dropdown').each(function () {
            var selectedStatus = $(this).closest('tr').find('.isactive').text().trim();
            if (selectedStatus !== "") {
                $(this).val(selectedStatus); 
            }
        });
        $(document).on("change", ".active-dropdown", function () {
            var selectedStatus = $(this).val();
            var selectedEmployeeId = $(this).closest('tr').find('.Id').text().trim(); 

            if (selectedStatus !== "") {
                $.ajax({
                    url: '/Vendor/UpdateVendoractive',
                    type: 'POST',
                    data: {
                        Isactive: selectedStatus === "true", 
                        Id: selectedEmployeeId 
                    },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success',
                                text: response.message
                            });

                            var statusText = selectedStatus === "true" ? "Active" : "Inactive";
                            $(this).closest('tr').find('.status-column').text(statusText);
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message
                            });
                        }
                    }.bind(this), 
                    error: function (xhr, status, error) {
                        console.error('Error updating status:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'There was an error updating the status.'
                        });
                    }
                });
            } else {
                Swal.fire({
                    icon: 'warning',
                    title: 'Warning',
                    text: 'Please select a valid status.'
                });
            }
        });
    });
    $(document).ready(function () {
        function updateDropdownColor(dropdown) {
            var selectedValue = dropdown.val();

            dropdown.removeClass('bg-success bg-danger text-white');

            if (selectedValue === "true") {
                // Add green background for "Active" status
                dropdown.addClass('bg-success text-white');
            } else if (selectedValue === "false") {
                // Add red background for "Inactive" status
                dropdown.addClass('bg-danger text-white');
            }
        }

        // Initial color update on page load
        $('.active-dropdown').each(function () {
            updateDropdownColor($(this));
        });

        // Update color when a value is selected
        $('.active-dropdown').on("change", function () {
            updateDropdownColor($(this));
        });
    });

</script>
