@{
    ViewData["Title"] = "Today's Attendance";
     Layout = "~/Views/Shared/_adminLayout.cshtml";

}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<title>Current User Location Map</title>
<link href="~/css/index.css" rel="stylesheet" />
<script src="~/js/location.js"></script>
<script src="~/js/index.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB5ypUzPuNVFWfMU5dsXZ-XVZ51zeshlS0&libraries=geometry&callback=initMap">
</script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<div class="page-wrapper">
    <div class="page-body-wrapper">

        <div class="page-sidebar">
        </div>

        <div class="page-body">

            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-8">
                        <div id="map"></div>
                    </div>
                    <div class="col-sm-4">
                        <div id="distance-info">
                            <span id="distance-text"></span>
                            <div class="progress">
                                <div id="distance-progress" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div id="accuracy-info">
                            <span id="accuracy-text"></span>
                            <div class="progress">
                                <div id="accuracy-progress" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div id="">
                            <span id="accuracy-text">Current Date & Time</span>
                            <iframe src="~/Attendance/clock" frameborder="0" class="clock-iframe"></iframe>

                        </div>
                        <div id="">
                            <span id=""></span>
                            <div class="progress1">
                                <div class="card-footer text-center">
                                    @if (true)
                                    {
                                        <button class="btn btn-success" onclick="reportEntry()">Report entry time</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-danger" onclick="reportExit()">Report exit time</button>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="progress-container">
                    <div id="progress-bar2" class="progress-bar"></div>
                    <div id="extra-time-bar" class="extra-time-bar"></div>
                    <div id="time-text" class="time-text">Total Time: 0 hours</div>
                </div>
                <div class="card mx-auto" style="max-width: 450px;">
                    <div class="card-header">
                        <h5><i class="mdi mdi-calendar-badge"></i> Today's Attendance</h5>
                        <small>CurrentDate</small>
                    </div>
                    <div class="card-body">
                        @if (true)
                        {
                            <p>
                                <span class="text-success">
                                    <i class="mdi mdi-clock-in"></i>
                                    In time: EntryTimeFormatted
                                </span>
                            </p>
                            @if (true)
                            {
                                <p>
                                    <span class="text-danger">
                                        <i class="mdi mdi-clock-out"></i>
                                        Out time: ExitTimeFormatted
                                    </span>
                                </p>
                            }
                            <p class="text-muted">You have been inside for StayDuration</p>
                        }
                        else
                        {
                            <p class="text-center text-muted">No data found for today.</p>
                        }
                    </div>
                    <div class="card-footer text-center">
                        @if (true)
                        {
                            <button class="btn btn-danger" onclick="reportExit()">Report exit time</button>
                        }
                        else
                        {
                            <button class="btn btn-success" onclick="reportEntry()">Report entry time</button>
                        }
                    </div>
                </div>
            </div>

        </div>


    </div>

</div>

