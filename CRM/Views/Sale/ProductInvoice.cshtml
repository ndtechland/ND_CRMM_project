            font-weight: bold;
        }

        td b {
            font-size: 16px;
            display: block;
        }

        /*         @@media screen and (max-width: 768px) {
                            .invoice-details table, .billing-details table {
                                width: 100%;
                            }

                            .invoice-details td, .billing-details td {
