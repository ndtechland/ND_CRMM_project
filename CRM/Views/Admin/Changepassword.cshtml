                <div class="row justify-content-center">
                    <div class="col-xl-6">
                        <div class="card mb-4">
                            <div class="card-header text-center" style="color:black">Change Password</div>
                            <div class="card-body">
                                <form asp-action="ChangePassword" method="post" autocomplete="off">
                                    <div class="row gx-3 mb-3">
                                        <div class="col-md-12 main-password">
                                            <label for="CurrentPassword">Current Password</label>
                                            <input asp-for="CurrentPassword" type="password" id="CurrentPassword" placeholder="Enter current password" class="form-control" required="" oninvalid="this.setCustomValidity('Please enter your current password')" oninput="this.setCustomValidity('')" />
                                            <a href="JavaScript:void(0);" class="icon-view">
