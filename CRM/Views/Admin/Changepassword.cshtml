                                            </a>
                                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row gx-3 mb-3">
                                        <div class="col-md-12 main-password">
                                            <label for="NewPassword">New Password</label>
                                            <input asp-for="NewPassword" type="password" id="NewPassword" placeholder="Enter new password" class="form-control" required="" oninvalid="this.setCustomValidity('Please enter a new password')" oninput="this.setCustomValidity('')" />
                                            <a href="JavaScript:void(0);" class="icon-view">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row gx-3 mb-3">
                                        <div class="col-md-12 main-password">
                                            <label for="ConfirmPassword">Confirm New Password</label>
                                            <input asp-for="ConfirmPassword" type="password" id="ConfirmPassword" placeholder="Confirm new password" class="form-control" required="" oninvalid="this.setCustomValidity('Please confirm your new password')" oninput="this.setCustomValidity('')" />
                                            <a href="JavaScript:void(0);" class="icon-view">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group d-flex justify-content-center">
                                        <input type="submit" value="Change Password" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('.main-password').find('.form-control').each(function (index, input) {
            var $input = $(input);
            $input.parent().find('.icon-view').click(function () {
                var change = "";
                if ($(this).find('i').hasClass('fa-eye')) {
                    $(this).find('i').removeClass('fa-eye')
                    $(this).find('i').addClass('fa-eye-slash')
                    change = "text";
                } else {
                    $(this).find('i').removeClass('fa-eye-slash')
                    $(this).find('i').addClass('fa-eye')
                    change = "password";
                }
                var rep = $("<input type='" + change + "' />")
                    .attr('id', $input.attr('id'))
                    .attr('name', $input.attr('name'))
                    .attr('class', $input.attr('class'))
                    .val($input.val())
                    .insertBefore($input);
                $input.remove();
                $input = rep;
            }).insertAfter($input);
        });
    });
</script>

