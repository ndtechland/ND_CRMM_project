@model CRM.Models.Crm.BannerMaster

@{
    ViewData["Title"] = "Banner";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}



<div class="page-wrapper">
    <div class="page-body-wrapper">
        <div class="page-sidebar">
        </div>

        <div class="page-body">

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>
                                    Customer Registration
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="/Home/Dashboard"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item">CRM</li>
                                <li class="breadcrumb-item active">Customer</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <form method="post" asp-action="Upload" asp-controller="Home" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="BannerImage" class="control-label"></label>
                                <input type="file" asp-for="BannerImage" class="form-control" />
                                <span asp-validation-for="BannerImage" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Bannerdescription" class="control-label"></label>
                                <input asp-for="Bannerdescription" class="form-control" />
                                <span asp-validation-for="Bannerdescription" class="text-danger"></span>
                            </div>

                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-info mt-3">
                                    @ViewBag.Message
                                </div>
                            }
                            <div class="form-group" style="display:flex; justify-content:center;">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>


    </div>

</div>