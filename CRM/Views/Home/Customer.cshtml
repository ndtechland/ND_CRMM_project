@model CRM.Models.Crm.CustomerRegistration

@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}



<div class="page-wrapper">
    <div class="page-body-wrapper">
        <div class="page-sidebar">
        </div>

        <div class="page-body">

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>
                                    Customer Registration
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="/Home/Dashboard"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item">CRM</li>
                                <li class="breadcrumb-item active">Customer</li>
                                <li class="breadcrumb-item active">Customer Registration</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="row">

                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <form asp-action="Customer" autocomplete="off">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row">
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">Company Name</label>
                                            <input asp-for="CompanyName" class="form-control" />
                                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">Contact Person Name</label>
                                            <input asp-for="ContactPersonName" class="form-control" />
                                            <span asp-validation-for="ContactPersonName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">Mobile Number</label>
                                            <input type="text" asp-for="MobileNumber" class="form-control" minlength="10" maxlength="10" onkeydown="validateNumericInput(event)" required />
                                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">Alternate Number</label>
                                            <input type="text" asp-for="AlternateNumber" class="form-control" minlength="10" maxlength="10" onkeydown="validateNumericInput(event)" required />
                                            <span asp-validation-for="AlternateNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">Email</label>
                                            <input type="email" asp-for="Email" class="form-control" required />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">Gst Number</label>
                                            <input asp-for="GstNumber" class="form-control" required />
                                            <span asp-validation-for="GstNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">Billing Address</label>
                                            <input asp-for="BillingAddress" class="form-control" required />
                                            <span asp-validation-for="BillingAddress" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">Product Details</label>

                                            @Html.DropDownListFor(model => model.ProductDetails, new SelectList(ViewBag.ProductDetails, "Value", "Text"), "-- Select ProductDetails --", new { @class = "form-control" })
                                        
                                            <span asp-validation-for="ProductDetails" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">Start Date</label>
                                            <input name="StartDate"  type="date" class="form-control" required />
                                            <span asp-validation-for="StartDate" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">Renew Date</label>
                                            <input name="RenewDate" type="date" class="form-control" required />
                                            <span asp-validation-for="RenewDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">Price</label>
                                            <input type="Price" asp-for="Email" class="form-control" required />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">State</label>
                                            <select id="State" class="form-control">
                                                <option value="">--Select State--</option>
                                                <option value="UP">UP</option>
                                                <option value="Other">Other</option>
                                            </select>
                                        </div>

                                       
                                    </div>
                                    
                                    <div class="row">
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">IGST</label>
                                            <input name="IGST" type="text" class="form-control" required id="IGST" readonly disabled />
                                            @*<span asp-validation-for="IGST" class="text-danger"></span>*@
                                        </div>
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">SGST</label>
                                            <input name="SGST" type="text" class="form-control" required id="SGST" readonly disabled />
                                            @*<span asp-validation-for="SGST" class="text-danger"></span>*@
                                        </div>
                                        <div class="form-group col-sm">
                                            <label for="validationCustom0">CGST</label>
                                            <input name="CGST" type="text" class="form-control" required id="CGST" readonly disabled />
                                            @*<span asp-validation-for="CGST" class="text-danger"></span>*@
                                        </div>
                                    </div>


                                    <div class="form-group" style="display:flex; justify-content:center;">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>

</div>
<!-- Add this in the head section of your HTML -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

@section scripts {
    <script>
        $(document).ready(function () {
            // Event listener for state dropdown change
            $('#State').change(function () {
                var selectedState = $(this).val();

                // Check if UP is selected
                if (selectedState === 'UP') {
                    // Fill in CGST and SGST values
                    $('#CGST').val('2.5');
                    $('#SGST').val('2.5');
                    $('#IGST').val(''); // Clear IGST value
                } else {
                    // Fill in IGST value and clear CGST and SGST values
                    $('#IGST').val('5');
                    $('#CGST').val('');
                    $('#SGST').val('');
                }
            });
        });
    </script>
}

