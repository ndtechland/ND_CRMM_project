    });
        $('#decycle').change(function () {
            $('#btnsave').show();
            var selectedDeduction = $(this).val();
            if (selectedDeduction === 'ESIC') {
                $('#epf').hide();
                $('#epfrate').hide();
                $('#esic').show();
                $('#esicrate').show();
            } else if (selectedDeduction === 'EPF') {
                $('#esic').hide();
                $('#esicrate').hide();
                $('#epf').show();
                $('#epfrate').show();
            }
           
        });


