<script>

    // jQuery code to close the modal on click of the "Close" link
    $(document).ready(function () {
        $("#closePopup").click(function () {
            $("#editModal").modal("hide");
        });
    });

    function Edit(id) {
        debugger;
        $.ajax({
            url: '/Employee/Edit?id=' + id,
            type: 'GET',
            contentType: 'application/json;charset=utf-8',
            dataType: 'json',
            success: function (response) {
                debugger;
                // Handle the success response, for example, load it into the modal
                $('#editModal').modal('show');
                $('#PersonalEmailAddress').val(response.emp.personalEmailAddress);
                $('#MobileNumber').val(response.emp.mobileNumber);
                $('#DateOfBirth').val(response.emp.dateOfBirth);
                $('#Age').val(response.emp.age);
                $('#FatherName').val(response.emp.fatherName);
                $('#Pan').val(response.emp.pan);
                $('#AddressLine1').val(response.emp.addressLine1);
                $('#AddressLine2').val(response.emp.addressLine2);
                $('#City').val(response.emp.city);
                $('#StateId').val(response.emp.stateId);
                $('#Pincode').val(response.emp.pincode);
                $('#pID').val(response.emp.id);

                //state bind and state master table
                // Set the selected value for the state master dropdown
                $('#StateId').empty(); // Clear existing options
                var row = "";
                $('#StateId').html('');
                row += "<option value=''>-- Select State --</option>";
                $.each(response.stateData, function (ind, item) {
                    var isSelected = item.id === response.emp.stateId;
                    row += "<option value='" + item.id + "' " + (isSelected ? "selected" : "") + ">" + item.stateName + "</option>";
                    
                });
                $('#StateId').html(row);
                $('#StateId').val(response.emp.stateId)
                $('#staticBackdrop').modal('show');
             
            },
            error: function () {
                alert('Data not found');
            }
        });
    }
    
 </script>
<script>
    var currentPage = 1;
    var rowsPerPage = 20;
    $(document).ready(function () {
        function paginateTable() {
            var table = $('#datatable');
            var rows = table.find('tbody tr');


            var totalPages = Math.ceil(rows.length / rowsPerPage);


            var pagination = $('#pagination');
            pagination.empty();

            for (var i = 1; i <= totalPages; i++) {
                var link = $('<li class="page-item"><a class="page-link" href="#">' + i + '</a></li>');


                if (i === currentPage) {
                    link.addClass('active');
                }

                pagination.append(link);
            }


            var startIndex = (currentPage - 1) * rowsPerPage;
            var endIndex = startIndex + rowsPerPage;

            rows.hide().slice(startIndex, endIndex).show();
        }


        paginateTable();

        $(document).on('click', '#pagination li a', function (event) {
            event.preventDefault();

            var clickedPage = parseInt($(this).text());


            currentPage = clickedPage;
            paginateTable();


            $('html, body').animate({ scrollTop: $('#table-container').offset().top }, 'slow');
        });
    });

</script>




 



