@model IEnumerable<CRM.Models.Crm.EmployeePersonalDetail>

@{
    ViewData["Title"] = "EmployeeBasicinfoList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<div class="page-wrapper">
    <div class="page-body-wrapper">
        <div class="page-sidebar">
        </div>
        <!-- Page Sidebar Ends-->
        <!-- Right sidebar Start-->
        <!-- Right sidebar Ends-->

        <div class="page-body">

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>
                                    Employee Basic info
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="/Home/Dashboard"><i data-feather="home"></i></a></li>
                               <li class="breadcrumb-item">HR Payrole</li>
                                <li class="breadcrumb-item active">Employee</li>
                                <li class="breadcrumb-item active">EmployeeBasicinfoList</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="row">

                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <div class=" table-responsive">
                                    <table class="table table-responsive">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.PersonalEmailAddress)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.MobileNumber)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.AddressLine1)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.AddressLine2)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.DateOfBirth)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Age)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.City)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Pan)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Pincode)
                                                </th>
                                                 <th>
                                                    State
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.FatherName)
                                                </th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PersonalEmailAddress)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.MobileNumber)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.AddressLine1)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.AddressLine2)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Age)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.City)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Pan)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Pincode)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.StateId)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FatherName)
                                                    </td>
                                                    <td>
                                                        <div>
                                                            <i class="fa fa-edit me-2 font-success"></i>
                                                            <i class="fa fa-trash font-danger"></i>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

