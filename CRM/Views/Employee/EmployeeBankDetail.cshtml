@model CRM.Models.Crm.EmployeeBankDetail

@{
    ViewData["Title"] = "EmployeeBankDetail";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}




<div class="page-wrapper">
    <div class="page-body-wrapper">
        <div class="page-sidebar">
        </div>

        <div class="page-body">

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>
                                    Employee Registration
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="/Home/Dashboard"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item">HR Payrole</li>
                                <li class="breadcrumb-item active">Employee</li>
                                <li class="breadcrumb-item active">EmployeeBankDetail</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="EmployeeBankDetail" autocomplete="off">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group col-sm">
                                    <label  class="control-label">Account HolderName</label>
                                    <input type="text" asp-for="AccountHolderName" class="form-control" />
                                    <span asp-validation-for="AccountHolderName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm">
                                    <label  class="control-label">Bank Name</label>
                                    <input type="text"  asp-for="BankName" class="form-control" />
                                    <span asp-validation-for="BankName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm">
                                    <label class="control-label">Account Number</label>
                                    <input type="text" asp-for="AccountNumber" class="form-control" />
                                    <span asp-validation-for="AccountNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm">
                                    <label class="control-label">Re-Enter AccountNumber</label>
                                    <input type="text" asp-for="ReEnterAccountNumber" class="form-control" />
                                    <span asp-validation-for="ReEnterAccountNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm">
                                    <label  class="control-label">Ifsc</label>
                                    <input type="text" asp-for="Ifsc" class="form-control" />
                                    <span asp-validation-for="Ifsc" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm">
                                    <label class="control-label">Account TypeId</label>
                                    @Html.DropDownListFor(model => model.AccountTypeId, new SelectList(ViewBag.AccountType, "Value", "Text"), "-- Select AccountType -- ", new { @class = "form-control" })
                                    <span asp-validation-for="AccountTypeId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group" style="display:flex; justify-content:center;">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>


    </div>

</div>

