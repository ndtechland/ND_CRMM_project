@model CRM.Models.DTO.Experienceletters
@{
    Layout = "";
    DateTime date = DateTime.Now;
    string fordate = date.ToString("dd-MM-yyyy");

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Experience Letter</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            font-family: 'Times New Roman', Times, serif;
            line-height: 1.6;
            color: #000;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 100%;
            max-width: 650px;
            margin: 0 auto;
            padding: 75px;
            box-shadow: none;
            border: none;
        }

        .header {
            position: relative;
            margin-bottom: 20px;
            overflow: hidden;
            height: 100px;
            margin-top: -40px;
            margin-left: -40px;
            z-index: -1;
        }

        .logo {
            position: absolute;
            top: 10px;
            right: 0;
            width: 200px;
        }

        .header-bg {
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 50%;
            background: linear-gradient(135deg, #173564 60%, transparent 50%);
        }

        .date {
            position: absolute;
            top: 45px;
            right: 20px;
            margin: 0;
            color: #000;
            font-size: 18px;
        }

        .content {
            margin-top: 20px;
        }

        p {
            margin: 10px 0;
        }

        .footer {
            margin-top: 50px;
            font-size: 0.85em;
            color: #555;
            text-align: center;
            border-top: 2px solid #173564;
            padding-top: 10px;
            position: relative;
        }

            .footer::before {
                content: '';
                position: absolute;
                top: -12px;
                left: 0;
                width: 100%;
                height: 10px;
                background-color: #173564;
            }

        .company-details {
            margin-top: 20px;
            text-align: center;
            font-size: 0.85em;
            color: #555;
        }

        .subject {
            font-weight: bold;
            text-align: center;
            margin-top: 20px;
        }

        .details, .signature {
            margin-top: 20px;
            font-size: larger;
        }

        .signature {
            margin-top: 40px;
        }

        /* Adjust for printing */
        @@page {
            size: A4;
            margin: 10mm;
        }

        @@media print {
            body {
                margin: 0;
                padding: 0;
                color: #000;
            }

            .container {
                box-shadow: none;
                border: none;
            }

            .header, .foo ter {
                page-break-inside: avoid;
            }
            /* Remove the URL from the footer */
            @@page {
                margin: 0;
            }

            @@media print {
                body {
                    margin: 0;
                }
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header Section -->
        <div class="header">
            <img src="~/CompanyImage/@Model.CompanyImage" alt="Company Logo" class="logo">

            <div class="header-bg"></div>
            <div class="date">
                <h3>Date:@fordate</h3>
            </div>
        </div>


        <!-- Content Section -->
        <div class="content">
            <h4>
                To,<br />
                <strong>[@Model.EmployeeName]</strong><br>
                Employee Code / No.: <strong>[@Model.EmployeeCode]</strong><br>
                Current Designation: <strong>[@Model.Designation]</strong><br>
                Residential Address: <strong>[@Model.CompanyAddress]</strong>
            </h4>
            <hr>
            <div class="subject">
                <h2>Subject: Experience Letter</h2>
            </div>
           
            <div class="details">
                <p>
                    This is to certify that <strong>[@Model.EmployeeName]</strong> joined our organization as a <strong>[@Model.Designation]</strong>.
                    She / He was associated with our organization from <strong>[@Model.StartDate]</strong> to <strong>[@Model.EndDate]</strong>. During
                    this tenure, we had ample opportunity to assess her professional and personal abilities.
                </p>

                <p>
                    In our organization, she worked with dedication, sincerity, and hard work. We wish
                    her all the success in her future endeavors and for a bright career ahead.
                </p>
            </div>
            <hr>
            <div class="signature">
                <p>
                    For <strong>@Model.CompanyName</strong><br>
                    <strong>@Model.HrName</strong><br>
                    <strong>@Model.HrDesignation</strong><br>
                    <strong>@Model.CompanyAddress</strong><br>
                    <strong>@Model.CompanyEmail</strong><br>
                    <strong>@Model.CompanyPhoneNumber</strong>
                </p>
            </div>
        </div>

        <div class="footer">
            <p>
                N D Techland Private Limited<br>
                Head Office: C-53, Sector-2, Noida-201301, U.P. | Branches: Noida | Delhi | Patna | Bangalore<br>
                Web: www.ndtechland.com | Email: info@ndtechland.com
            </p>
        </div>
    </div>
</body>
</html>
