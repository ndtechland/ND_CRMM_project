@model CRM.Models.DTO.Relievingletters
@{
    Layout = "";
    DateTime date = DateTime.Now;
    string fordate = date.ToString("dd-MM-yyyy");

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relieving Letter</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            font-family: 'Times New Roman', Times, serif;
            line-height: 1.6;
            color: #000;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 100%;
            max-width: 736px;
            margin: 0 auto;
            padding: 75px;
            box-shadow: none;
            border: none;
        }

        .header {
            position: relative;
            margin-bottom: 20px;
            overflow: hidden;
            height: 100px;
            margin-top: -40px;
            margin-left: -40px;
            z-index: -1;
        }

        .logo {
            position: absolute;
            top: 10px;
            right: 0;
            width: 200px;
        }

        .header-bg {
            position: absolute;
            top: 0;
            right: 0;
            width: 95%;
            height: 50%;
            background: linear-gradient(135deg, #173564 60%, transparent 50%);
        }

        .date {
            position: absolute;
            top: 45px;
            right: 20px;
            margin: 0;
            color: #000;
            font-size: 18px;
        }

        .content {
            margin-top: 20px;
        }

        p {
            margin: 10px 0;
        }

        .footer {
            margin-top: 50px;
            font-size: 0.85em;
            color: #555;
            text-align: center;
            border-top: 2px solid #173564;
            padding-top: 10px;
            position: relative;
        }

            .footer::before {
                content: '';
                position: absolute;
                top: -12px;
                left: 0;
                width: 100%;
                height: 10px;
                background-color: #173564;
            }

        .company-details {
            margin-top: 20px;
            text-align: center;
            font-size: 0.85em;
            color: #555;
        }

        .subject {
            font-weight: bold;
            text-align: center;
            margin-top: 20px;
        }

        .details, .signature {
            margin-top: 20px;
            font-size: larger;
        }

        .signature {
            margin-top: 40px;
        }

        /* Adjust for printing */
        @@page {
            size: A4;
            margin: 30mm;
        }

        @@media print {
            body {
                margin: 0;
                padding: 0;
                color: #000;
            }

            .container {
                box-shadow: none;
                border: none;
            }

            .header, .foo ter {
                page-break-inside: avoid;
            }
            /* Remove the URL from the footer */
            @@page {
                margin: 0;
            }

            @@media print {
                body {
                    margin: 0;
                }
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header Section -->
        <div class="header">
            <img src="~/CompanyImage/@Model.CompanyImage" alt="Company Logo" class="logo">

            <div class="header-bg"></div>
        </div>


        <div class="content">
            <h4>
                To,<br/>
                <strong>[@Model.EmployeeName]</strong><br>
                Employee Code / No.: <strong>[@Model.EmployeeCode]</strong><br>
                Current Designation: <strong>[@Model.Designation]</strong><br>
                Residential Address: <strong>[@Model.CompanyAddress]</strong>
            </h4>
            <hr>
            <div class="subject">
                <h2>Subject: Relieving Order Letter</h2>
            </div>
            
            <div class="details">
                <p>
                    Dear <strong>[@Model.EmployeeName]</strong>,
                </p>
                <p>
                    With reference to your resignation letter dated <strong>[@Model.ResignationDate]</strong>, from the post of <strong>[@Model.Designation]</strong> this is to inform you that your resignation has been this is to inform you that your resignation has been accepted by the management. We have also received the Clearance Report from the concerned department regarding your full and final settlement of your accounts with our company.
                </p>
                <p>
                    Therefore, we do hereby relieve you from all your services with our organization, effective <br /> from <strong>[@Model.LastDateofEmployment]</strong>.
                </p>
                <p> 
                    We thank you for your association with our company and wish you a successful future ahead.
                </p>
                <p>
                    Yours sincerely,<br>
                </p>
                <h3>For <strong>[@Model.CompanyName]</strong></h3>
              
            </div>
            <hr>
            <div class="signature">
                <p>
                    <strong>@Model.CompanyAddress</strong><br>
                    <strong>@Model.CompanyEmail</strong><br>
                    <strong>@Model.CompanyPhoneNumber</strong>
                </p>
            </div>
        </div>

        <div class="footer">
            <p>
                N D Techland Private Limited<br>
                Head Office: C-53, Sector-2, Noida-201301, U.P. | Branches: Noida | Delhi | Patna | Bangalore<br>
                Web: www.ndtechland.com | Email: info@ndtechland.com
            </p>
        </div>
    </div>
</body>
</html>
