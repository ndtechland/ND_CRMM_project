@model CRM.Models.DTO.getempOfferletter
@{
    Layout = "";
    DateTime date = DateTime.Now;
    string fordate = date.ToString("dd-MM-yyyy");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Offer Letter</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            font-family: 'Times New Roman', Times, serif;
            line-height: 1.6;
            color: #000;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            padding: 100px;
            box-shadow: none;
            border: none;
        }

        .header {
            position: relative;
            margin-bottom: 20px;
            overflow: hidden;
            height: 100px;
            margin-top: -40px;
            margin-left: -40px;
            z-index: -1;
        }

        .logo {
            position: absolute;
            top: 10px;
            right: 0;
            width: 25%;
            height: 60%;
        }

        .header-bg {
            position: absolute;
            top: 0;
            right: 0;
            width: 96%;
            height: 50%;
            background: linear-gradient(135deg, #173564 60%, transparent 50%);
        }

        .date {
            position: absolute;
            top: 45px;
            right: 66px;
            margin: 0;
            color: #000;
            font-size: 18px;
        }

        .content {
            margin-top: 20px;
        }

        p {
            margin: 2px 0;
            font-size: larger;
        }

        .footer {
            margin-top: 100px;
            font-size: 0.85em;
            color: #555;
            text-align: center;
            border-top: 0px solid #173564;
            padding-top: 10px;
            position: relative;
        }

            .footer::before {
                content: '';
                position: absolute;
                top: -12px;
                left: 0;
                width: 100%;
                height: 10px;
                background-color: #173564;
            }

        .company-details {
            margin-top: 20px;
            text-align: center;
            font-size: 0.85em;
            color: #555;
        }

        .subject {
            font-weight: bold;
            text-align: center;
            margin-top: 20px;
        }

        .details, .signature {
            margin-top: 20px;
        }

        .signature {
            margin-top: 40px;
        }

        /* Adjust for printing */
        @@page {
            size: A4;
            /*             margin: 20mm;
         */
        }

        @@media print {
            body {
                margin: 0;
                padding: 0;
                color: #000;
            }

            .container {
                box-shadow: none;
                border: none;
            }

            .header, .foo ter {
                page-break-inside: avoid;
            }
            /* Remove the URL from the footer */
            @@page {
                margin: 0;
            }

            @@media print {
                body {
                    margin: 0;
                }
            }
        }
    </style>
</head>
<body>
   @*  <div style="text-align:center; margin-top: 20px;">
        <button id="printButton" onclick="printPage()">Print</button>
        <button id="backButton" onclick="window.history.back()">Back</button>
    </div> *@
    <div class="container">
        <!-- Header Section -->
        <div class="header">
            <img src="~/CompanyImage/@Model.CompanyImage" alt="Company Logo" class="logo">
            <div class="header-bg"></div>
        </div>

        <div class="content">
            <h4>
                To,<br />
                <strong>@Model.Name</strong><br>
                @Model.CandidateAddress<br>
                @Model.CityName, @Model.StateName, @Model.CandidatePincode
            </h4>
            <hr>
            <div class="subject">
                <h3>Subject: Offer of Employment</h3>
            </div>
            <div class="details">
                <p>Dear <strong>@Model.Name</strong>,</p>
                <p>This is with reference to your application and the subsequent interview held at our office. We are pleased to offer you the position of <strong>@Model.DesignationName</strong> at <strong>@Model.CompanyName</strong>, with a CTC of <strong>@Model.AnnualCtc</strong> as discussed and mutually agreed upon.</p>
                <p>As discussed, you are expected to join us on <strong>@Model.DateOfJoining</strong> at our office located at <strong>@Model.OfficeLocation, @Model.OfficeCity, @Model.OfficeState</strong>. Kindly bring the following documents with you at the time of joining:</p>
                <ol>
                    <li>Two passport-size photographs</li>
                    <li>Original and photocopy set of your Qualification Certificates (originals will be returned after verification)</li>
                    <li>Proof of residence</li>
                    <li>Photocopies of your Resignation Letter and Relieving Letter from your current employer</li>
                    <li>Photocopy of your last drawn salary slip</li>
                    <li>Form 16 / Certificate of Tax Deducted along with a copy of your PAN for Income Tax documentation</li>
                </ol>
                <p>A detailed <strong>Appointment Letter</strong> outlining the terms and conditions of your employment will be provided to you upon your joining the company.</p>
                <p>We kindly request that you send us a confirmation reply acknowledging your acceptance of this offer for employment.</p>
                <p>We look forward to having you on our team and wish you a successful career with us.</p>
                <div class="signature">
                    <hr>
                    <strong>With best regards,</strong>
                    <p>
                        <strong>@Model.HrName</strong><br>
                        @Model.HrJobTitle<br>
                        @Model.CompanyName
                    </p>
                </div>
            </div>
        </div>

        <div class="footer">
            <p>
                <strong>N D Techland Private Limited</strong><br>
                Head Office: C-53, Sector-2, Noida-201301, UP | Branches: Noida | Delhi | Patna | Bangalore<br>
                Web: www.ndtechland.com | Email: info@ndtechland.com
            </p>
        </div>
    </div>
</body>
</html>
<script>
    // Function to hide buttons after print
    function afterPrint() {
        document.getElementById('printButton').style.display = 'none';
        document.getElementById('backButton').style.display = 'none';
    }

    // Call the afterPrint function after print
    window.onafterprint = afterPrint;

    // Print function
    function printPage() {
        window.print();
    }
</script>