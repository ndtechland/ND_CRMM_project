<script>
    function calculateAge(selectedDate) {
        // Parse the selected date string into a Date object
        const selectedDateObj = new Date(selectedDate);

        // Get the current date
        const currentDate = new Date();

        // Calculate the difference in years
        const age = currentDate.getFullYear() - selectedDateObj.getFullYear();

        // Check if the birthday has occurred this year
        const hasBirthdayOccurred = (
            currentDate.getMonth() > selectedDateObj.getMonth() ||
            (currentDate.getMonth() === selectedDateObj.getMonth() &&
                currentDate.getDate() >= selectedDateObj.getDate())
        );

        // Adjust the age based on whether the birthday has occurred
        const finalAge = hasBirthdayOccurred ? age : age - 1;

        return finalAge;
    }

    // Example usage:
    const selectedDate = '1990-05-15';
    const age = calculateAge(selectedDate);
    console.log(`The person is ${age} years old.`);
</script>



